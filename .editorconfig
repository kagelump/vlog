# EditorConfig helps maintain consistent coding styles
# across editors and IDEs. See https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 2
tab_width = 2
max_line_length = 88

[*.{yml,yaml,md,txt}]
indent_style = space
indent_size = 2
tab_width = 2
